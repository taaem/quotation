@import 'rupture'
@import url('http://fonts.googleapis.com/css?family=Fjord+One|Inconsolata');

rupture.scale = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'

html 
	box-sizing border-box
 
*, *:before, *:after 
	box-sizing inherit
 
 
body 
	font-family 'Fjord One', sans-serif
	font-size 16px
	background #444
	margin 0
a
	text-decoration none
	color white


.container 
	margin 0 auto
	min-height 100%
	background white
	box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.16), 0 2px 5px 0 rgba(0, 0, 0, 0.26)
 
header 
	font-family 'Inconsolata'
	position relative
	text-align center
	background-image url('/img/header.jpg')
	background-size cover
	background-position 0 600px
	height 600px
	width 100%
	box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.16), 0 2px 5px 0 rgba(0, 0, 0, 0.26)
	margin-bottom 40px
main
	max-width: 900px;
	margin: 0 auto; 
	text-align center
.title
	width 300px
	margin-top 100px
	font-size 2em
	margin-right auto
	margin-left auto
	margin-bottom 10px
	
#add-new-quote
	text-align center
	cursor: pointer
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	background-color: #616161	
	color white
	border-radius 5px
	width 200px
	margin 0 auto
	padding 10px 
	box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.16), 0 2px 5px 0 rgba(0, 0, 0, 0.26)
	
#new-quote
	display: none
	margin 0 auto
	width 435px
	box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.16), 0 2px 5px 0 rgba(0, 0, 0, 0.26)
	padding 20px
	+below('s')
		width 100%	
	form
		padding: 10px 0;
		background: transparent;
		border: none;
		width: 100%;
		font-size: 1em;
		textarea
		
			font-family sans-serif
			padding: 10px 0;
			background: transparent;
			border: none;
			width 100%
			font-size: 1em;
			border-bottom: 1px solid rgba(0,0,0,0.3);
		input
			padding: 10px 0;
			background: transparent;
			width 100%
			border: none;
			font-size: 1em;
			border-bottom: 1px solid rgba(0,0,0,0.3);

		input:focus
			outline: 0;

.onlyByUser
	margin 0 auto
	margin-top 20px
	text-align center
	display: block;
	text-align: center;

#handler
	line-height 30px
	text-align center
	font-size 14px
	float right
	cursor: pointer
	background: #616161;
	margin-right 10px
	height 30px
	width 100px
	color: #FFF;
	border: none;
	border-radius: 4px;
	+below('m')
		float none
		margin-bottom 20px
		margin-left 20px

#artist-select
	margin 0 auto
	margin-top 10px
	text-align center