#forms
	float right
	display none
	margin 0 auto
	margin-right 20px
	width 435px
	box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.16), 0 2px 5px 0 rgba(0, 0, 0, 0.26)
	padding 20px
	+below('s')
		width 100%
		margin-left 20px	
	form
		padding: 10px 0;
		background: transparent;
		border: none;
		width: 100%;
		font-size: 1em;
		
		input
			padding: 10px 0;
			background: transparent;
			width 100%
			border: none;
			font-size: 1em;
			border-bottom: 1px solid rgba(0,0,0,0.3);

		input:focus
			outline: 0;